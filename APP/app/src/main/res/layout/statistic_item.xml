<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="10"
    android:background="@drawable/rounded_edittext"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="15dp"
    android:paddingRight="15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_payMemberNameSta"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Thiá»‡n"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/blue_logo"/>

    <LinearLayout
        android:layout_weight="7"
        android:weightSum="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_remainMoneySta"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_marginLeft="8dp"
            android:text="500000"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="@drawable/border_button"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_revenuesSta"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="2dp"
                android:text="50000"
                android:paddingBottom="2dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/border_button_red"/>

            <TextView
                android:id="@+id/tv_expendituresSta"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="2dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="2dp"
                android:text="50000"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/border_button_gray"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>